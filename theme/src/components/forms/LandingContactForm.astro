---

import { Icon } from 'astro-icon';
import { Button, FormInput, FormSelect, FormTextarea } from '@littlesticks/odyssey-theme-components';

const yesNoOptions = ['Yes', 'No'];

---

<form name="Lead Form" method="POST" action="/thank-you" data-netlify="true">
  <FormInput type="text" label="Name" name="Name" placeholder="Dua Lipa" required/>
  <FormInput type="email" label="Email" name="Email" placeholder="dua@letsrock.com" required/>
  <FormInput type="tel" label="Phone Number" name="Phone Number" placeholder="Enter phone number" required/>
  <FormInput type="date" label="Event Date" name="Event Date" required/>
  <FormInput type="text" label="Event Venue" name="Event Venue" placeholder="Enter venue" required/>
  <FormSelect label="$25 Text, Bluetooth, QR Photo Delivery" name="$25 Text, Bluetooth, QR Photo Delivery" options={yesNoOptions} required/>
  <FormSelect label="$50 Gifs, Boomerangs and Videos" name="$50 Gifs, Boomerangs, Videos" options={yesNoOptions} required/>
  <FormSelect label="$100 Custom Tap to Start Screen" name="$100 Custom Tap to Start Screen" options={yesNoOptions} required/>
  <FormSelect label="$100 Custom Props" name="$100 Custom Props" options={yesNoOptions} required/>
  <FormSelect label="$100 Custom Photo Template" name="$100 Custom Photo Template" options={yesNoOptions} required/>
  <FormSelect label="$200 Custom Branding" name="$200 Custom Branding" options={yesNoOptions} required/>
  <FormSelect label="$200 Premium Backdrop" name="$200 Premium Backdrop" options={yesNoOptions} required/>

  <Button customIcon>Submit
    <Fragment slot="icon">
      <Icon name="ic:baseline-chevron-right" />
    </Fragment>
  </Button>
</form>

<style>
  form {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }
</style>
