---
import { parse, isBefore } from 'date-fns';
import {
	Container,
	Button,
	TextCardSection,
	BlogPostsList,
	CtaCardSection
} from '@littlesticks/odyssey-theme-components';
import {Icon} from 'astro-icon'
import Layout from '../../layouts/Page.astro';
import NewsletterForm from '../../components/forms/NewsletterForm.astro';

const posts = await Astro.glob('./posts/*.mdx').then(posts =>
	posts
		.map(({ frontmatter, url }) => ({
			title: frontmatter.title,
			description: frontmatter.description,
			authors: frontmatter.authors,
			publishDate: parse(frontmatter.publishDate, 'MMMM d, yyyy', new Date()),
			featuredImage: frontmatter.featuredImage,
			excerpt: frontmatter.excerpt,
			href: url,
		}))
		.sort((a, b) => {
			if (isBefore(a.publishDate, b.publishDate)) return 1;
			if (isBefore(b.publishDate, a.publishDate)) return -1;
			return 0;
		})
);

const seo = {
	title: 'Blog | Popstar Photo Booths',
	description: 'Photo booth rental in Raleigh, NC',
};
---

<Layout {seo}>
	<Container>
		<TextCardSection>
			<h1>Popstar Blog</h1>
			<p>
				Want to be the first to hear about fun events in Raleigh? Join our newsletter!
			</p>
			<NewsletterForm />
		</TextCardSection>
		<section class="blog-posts-list__section">
			<h2>Recent Posts</h2>
			<BlogPostsList posts={posts} />
		</section>
	</Container>
	<CtaCardSection background="var(--theme-surface-1)" color="var(--theme-on-surface-2)">
		<h2>Ready to get started?</h2>
		<p>Get a Quote!</p>
		<Button href="https://popstar-photo-booths.checkcherry.com/reservation/user_info" customIcon>
		Get Quote
		<Fragment slot="icon">
		  <Icon name="ic:baseline-chevron-right"/>
		</Fragment>
		</Button>
	</CtaCardSection>
</Layout>

<style>
	.blog-posts-list__section {
		margin: var(--section-margin) auto;
	}
</style>
