---
import Container from '../core/Container.astro';

const {quoteText, customerName, imageUrl} = Astro.props;
---

<section class="customer-quote__section">
  <Container narrow>
    <script src="https://static.elfsight.com/platform/platform.js" data-use-service-core defer></script>
    <div class="elfsight-app-8164c114-40b6-4539-90d4-0368aa3a51ee" data-elfsight-app-lazy></div>
  </Container>
</section>

<style>
.customer-quote__section {
  margin: calc(var(--section-margin) * 2) auto;
  padding: 3rem;
  background-color: var(--theme-surface-1);
  text-align: center;
}
.customer-quote__section blockquote {
  padding: 0;
  border: none;
  font-size: var(--font-size-md);
  font-weight: 400;
  font-style: italic;
  line-height: 1.8;
}
</style>